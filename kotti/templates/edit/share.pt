<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="Kotti"
      metal:use-macro="api.macro('kotti:templates/edit/master.pt')">

  <div metal:fill-slot="content">
    <h1 i18n:translate="">Share <em i18n:name="title">${context.title}</em></h1>

    <form action="${request.url}" method="post">
      <fieldset>
        <legend i18n:translate="">Manage access rights</legend>

        <div class="control-group">
          <div class="controls">
            <input type="text" name="query" id="search-query"
                   value="${request.params.get('query')}"
                   placeholder="Search users and groups"
                   i18n:attributes="placeholder"
                   />
          </div>
        </div>
        <div class="form-actions">
          <button type="submit" name="search" class="btn primary" i18n:translate="">
            Search
          </button>
        </div>

        <table tal:condition="entries or acl" class="table table-bordered">
          <tr>
            <th i18n:translate="">Name</th>
            <th tal:repeat="permission permissions">
              ${permission}
            </th>
            <th>ALL_PERMISSIONS</th>
            <th>Action</th>
          </tr>
          <tr tal:repeat="entry entries"
              class="entry ${repeat.entry.even and 'even' or 'odd'}">
            <td>
              <img src="${api.avatar_url(entry)}" alt="Gravatar"
                   i18n:attributes="alt"/>
              ${entry.title}
            </td>
            <td tal:repeat="perm permissions">
                  <input type="checkbox"
                         name="${entry.name}::${perm}"
                         />
            </td>
            <td>
                  <input type="checkbox"
                         name="${entry.name}::ALL_PERMISSIONS"
                         />
            </td>
            <td>
                <select name="${entry.name}::action">
                  <option>Allow</option>
                  <option>Deny</option>
                </select>
            </td>
          </tr>
          <tr tal:repeat="ace acl">
            <td>${ace[1]}</td>
            <td tal:repeat="perm permissions">
                  <input type="checkbox"
                         name="${ace[1]}::${perm}"
                         checked="${ace[2] != all and perm in ace[2] and 'checked' or None}"
                         />
            </td>
            <td>
                  <input type="checkbox"
                         name="${ace[1]}::ALL_PERMISSIONS"
                         checked="${ace[2] == all and 'checked' or None}"
                         />
            </td>
            <td>
                <select name="${ace[1]}::action">
                  <option selected="${'Allow' == ace[0] and 'selected' or None}">
                    Allow</option>
                  <option selected="${'Deny' == ace[0] and 'selected' or None}">
                    Deny</option>
                </select>
            </td>
          </tr>
        </table>

        <div class="form-actions" tal:condition="entries or acl">
          <button type="submit" name="apply" class="btn btn-primary"
                  i18n:translate="">
            Apply changes
          </button>
        </div>
      </fieldset>
      </form>
    </div>

</html>
